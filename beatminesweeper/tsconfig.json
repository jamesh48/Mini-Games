{
  "compilerOptions": {
    "experimentalDecorators": true,
    "outDir": "ts-dist",
    "module": "esnext",
    "target": "es2017",
    "lib": [
      "es6",
      "dom",
      "esnext.asynciterable",
      "es2017"
    ],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "ts-src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "baseUrl": "./",
    "paths": {
      "TSSrc/*": [
        "ts-src/*"
      ],
      "GlobalStore": [
        "ts-src/public/GlobalStore/GlobalStore"
      ],
      "TSComponents/*": [
        "ts-src/public/components/*"
      ],
      "BoardStore": [
        "ts-src/public/components/Board/BoardStore/BoardStore"
      ],
      "TimerStore": [
        "ts-src/public/components/MillisecondTimer/TimerStore/TimerStore"
      ],
      "CustomHooks" : [
        "ts-src/public/components/customHooks"
      ],
      "MinesweeperTypes": [
        "ts-src/minesweeper-types"
      ],
      "TSDatabase/*": [
        "ts-src/database/*"
      ]
    },
  },
  "include": [
    "./ts-src/*",
    "./ts-src/utils/*",
    "./ts-src/utils/generated/*",
    "./ts-src/public/index.tsx",
    "./ts-src/**/*.ts",
    "./ts-src/**/*.tsx"
  ],

  "exclude": [
    "node_modules",
    "build",
    "ts-dist",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "ts-src/setupTests.ts"
  ]
}
